@page
@model IndexModel
@{
    ViewData["Title"] = "";
}

<link href="css/items.css" rel="stylesheet" />

<header class="bg-dark py-5">
    <div class="container px-4 px-lg-5 my-5">
        <div class="text-center text-white">
            <h1 class="display-4 fw-bolder">Shop in style</h1>
            <p class="lead fw-normal text-white-50 mb-0">Scroll down to view all products</p>
        </div>
    </div>
</header>


<div class="container py-5">


    <div class="row">
        <div class="col-lg-8 mx-auto">
            <!-- List group-->
            <ul class="list-group shadow">
                <!-- list group item-->
                <li class="list-group-item">

                    <form method="post">
                        <label asp-for="Search"></label>
                        <input asp-for="Search" />
                        <input type="submit" value="Search" />

                    </form>

                    @foreach (var product in Model.product)
                    {
                        <!-- Custom content-->
                        <div class="media align-items-lg-center flex-column flex-lg-row p-3">
                            <div class="media-body order-2 order-lg-1">
                                <h5 class="mt-0 font-weight-bold mb-2">@product.Name</h5>
                                <p class="font-italic text-muted mb-0 small">@product.Description</p>
                                <div class="d-flex align-items-center justify-content-between mt-1">
                                    <h6 class="font-weight-bold my-2">£@product.Price</h6>
                                </div>
                            </div><img src="/Images/@product.ProductImage" alt="Image of @product.ProductImageAlt" width="200" class="ml-lg-5 order-1 order-lg-2">
                        </div>
                        <div>
                            <a class="btn btn-sm btn-danger" asp-page="/basketPage" asp-route-id=@product.Id asp-page-handler="Add">Add to Cart</a>
                        </div>
                        <!-- End -->

                    }



                </li> <!-- End -->
            </ul> <!-- End -->
        </div>
    </div>
</div>